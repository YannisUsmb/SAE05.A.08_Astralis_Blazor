@page "/settings"
@page "/settings/profil"
@layout SettingsLayout
@using Astralis.Shared.DTOs
@using Astralis.Shared.Enums
@using Astralis_BlazorApp.Components.Layout
@using Astralis_BlazorApp.ViewModels
@inject ProfileViewModel ViewModel

<h3 class="text-white mb-4">Profil</h3>

@if (ViewModel.IsLoading && ViewModel.EditContext == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-accent-purple" role="status"></div>
    </div>
}
else if (ViewModel.EditContext != null)
{
    @if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
    {
        <div class="alert alert-success border-0 bg-success bg-opacity-25 text-white mb-4">
            <i class="bi bi-check-circle me-2"></i> @ViewModel.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage) && !ViewModel.EditContext.GetValidationMessages().Any())
    {
        <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i> @ViewModel.ErrorMessage
        </div>
    }

    <div class="glass-panel p-4 rounded-3 border border-white-10">

        <div class="d-flex align-items-center gap-4 mb-5 pb-4 border-bottom border-white-10">
            <div class="position-relative">
                <div class="rounded-circle overflow-hidden border border-2 border-white-10" style="width: 100px; height: 100px;">
                    <img src="@GetAvatarUrl()"
                         class="w-100 h-100 object-fit-cover"
                         alt="Avatar" />

                    @if (ViewModel.IsUploading)
                    {
                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-black bg-opacity-50 d-flex align-items-center justify-content-center">
                            <div class="spinner-border spinner-border-sm text-white" role="status"></div>
                        </div>
                    }
                </div>

                <InputFile OnChange="@((e) => ViewModel.UploadAvatarAsync(e.File))"
                           class="position-absolute top-0 start-0 w-100 h-100 opacity-0 pointer"
                           accept=".jpg,.jpeg,.png" />
            </div>

            <div>
                <h5 class="text-white mb-1">Photo de profil</h5>
                <p class="text-white-50 small mb-0">Format JPG, PNG. Max 5Mo.</p>
            </div>
        </div>

        <EditForm EditContext="ViewModel.EditContext" OnSubmit="() => ViewModel.SaveChangesAsync(false)">
            <DataAnnotationsValidator />

            <div class="row g-4">
                <div class="col-12 form-group">
                    <label class="required-label">Nom d'utilisateur</label>
                    <InputText @bind-Value="ViewModel.ProfileData.Username" class="form-control-astralis" placeholder="Pseudo" />
                    <ValidationMessage For="@(() => ViewModel.ProfileData.Username)" />
                </div>

                <div class="col-md-6 form-group">
                    <label class="required-label">Prénom</label>
                    <InputText @bind-Value="ViewModel.ProfileData.FirstName" class="form-control-astralis" />
                    <ValidationMessage For="@(() => ViewModel.ProfileData.FirstName)" />
                </div>
                <div class="col-md-6 form-group">
                    <label class="required-label">Nom</label>
                    <InputText @bind-Value="ViewModel.ProfileData.LastName" class="form-control-astralis" />
                    <ValidationMessage For="@(() => ViewModel.ProfileData.LastName)" />
                </div>

                <div class="col-md-6 form-group">
                    <label class="required-label">Genre</label>
                    <InputSelect @bind-Value="ViewModel.ProfileData.Gender" class="form-control-astralis">
                        @foreach (GenderType gender in Enum.GetValues(typeof(GenderType)))
                        {
                            if (gender != GenderType.Unknown)
                            {
                                <option value="@gender">@GetFrenchGenderLabel(gender)</option>
                            }
                        }
                    </InputSelect>
                </div>
            </div>

            <div class="mt-5 text-end">
                <button type="submit" class="btn btn-astralis-premium px-4" disabled="@ViewModel.IsLoading">
                    @if (ViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Sauvegarde...</span>
                    }
                    else
                    {
                        <span>Enregistrer</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadDataAsync();
    }

    private string GetAvatarUrl()
    {
        if (!string.IsNullOrEmpty(ViewModel.ProfileData.AvatarUrl))
        {
            return ViewModel.ProfileData.AvatarUrl;
        }
        return $"https://ui-avatars.com/api/?name={ViewModel.ProfileData.Username}&background=9d4edd&color=fff&rounded=true";
    }

    private string GetFrenchGenderLabel(GenderType gender)
    {
        return gender switch
        {
            GenderType.Male => "Homme",
            GenderType.Female => "Femme",
            GenderType.Other => "Autre",
            _ => gender.ToString()
        };
    }
}