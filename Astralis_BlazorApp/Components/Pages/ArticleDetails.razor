@page "/articles/{Id:int}"
@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@inject IArticleService ArticleService
@inject NavigationManager Navigation
@inject ArticleDetailsViewModel ViewModel
@implements IDisposable

<PageTitle>@(_article?.Title ?? "Article") – Astralis</PageTitle>

<div class="content-wrapper position-relative">

    @if (ShowConfirmDelete && _article != null)
    {
        <div class="modal-backdrop-custom" @onclick="() => ShowConfirmDelete = false">
            <div class="modal-glass-content animate-fade-in" @onclick:stopPropagation>
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    </div>
                    <h4 class="text-white font-orbitron">Confirmer la suppression</h4>
                    <p class="text-white-50">
                        Voulez-vous vraiment supprimer l'article : <br />
                        <span class="text-white fw-bold">"@_article.Title"</span> ?
                    </p>
                    <p class="small text-danger fst-italic">Cette action est irréversible.</p>
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <button class="btn btn-outline-light px-4" @onclick="() => ShowConfirmDelete = false">
                        Annuler
                    </button>
                    <button class="btn btn-danger px-4" @onclick="ConfirmDelete">
                        <i class="bi bi-trash-fill me-2"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>
    }

    @if (ViewModel.CommentToDelete != null)
    {
        <div class="modal-backdrop-custom" @onclick="ViewModel.CancelDeleteComment">
            <div class="modal-glass-content animate-fade-in" @onclick:stopPropagation>
                <div class="text-center mb-4">
                    <div class="mb-3"><i class="bi bi-trash3 text-danger" style="font-size: 3rem;"></i></div>
                    <h4 class="text-white font-orbitron">Supprimer ce commentaire ?</h4>
                    <p class="text-white-50 small fst-italic">"@ViewModel.CommentToDelete.Text"</p>
                    <p class="text-danger small mt-2">Attention : Cela supprimera également toutes les réponses associées.</p>
                </div>
                <div class="d-flex justify-content-center gap-3">
                    <button class="btn btn-outline-light px-4" @onclick="ViewModel.CancelDeleteComment" disabled="@ViewModel.IsSubmitting">Annuler</button>
                    <button class="btn btn-danger px-4" @onclick="ViewModel.ConfirmDeleteCommentAsync" disabled="@ViewModel.IsSubmitting">
                        @if (ViewModel.IsSubmitting) { <span class="spinner-border spinner-border-sm"></span> } else { <span>Supprimer</span> }
                    </button>
                </div>
            </div>
        </div>
    }

    @if (ViewModel.IsReportModalOpen && ViewModel.CommentToReport != null)
    {
        <div class="modal-backdrop-custom" @onclick="ViewModel.CloseReportModal">
            <div class="modal-glass-content animate-fade-in text-start" @onclick:stopPropagation>
                
                @if (ViewModel.ShowReportSuccessMessage)
                {
                    <div class="text-center py-5">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        <h4 class="text-white font-orbitron mt-3">Signalement envoyé</h4>
                        <p class="text-white-50">Merci de nous aider à garder Astralis sûr.</p>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-white font-orbitron m-0"><i class="bi bi-flag-fill text-warning me-2"></i>Signaler un commentaire</h4>
                        <button type="button" class="btn-close btn-close-white" @onclick="ViewModel.CloseReportModal"></button>
                    </div>

                    <div class="p-3 mb-3 bg-black bg-opacity-25 rounded border border-white-10">
                        <small class="text-white-50 d-block mb-1">Commentaire de <strong class="text-white">@ViewModel.CommentToReport.Username</strong> :</small>
                        <p class="text-white fst-italic m-0 text-truncate">"@ViewModel.CommentToReport.Text"</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white small mb-2">Motif du signalement <span class="text-danger">*</span></label>
    
                        <div class="motive-list">
                            @foreach (var motive in ViewModel.ReportMotives)
                            {
                                <div class="motive-item @(ViewModel.SelectedReportMotiveId == motive.Id ? "active" : "")" 
                                     @onclick="() => ViewModel.SelectedReportMotiveId = motive.Id">
                
                                    <span class="motive-label">@motive.Label</span>

                                    <div class="info-tooltip-wrapper" @onclick:stopPropagation>
                                        <i class="bi bi-info-circle info-icon"></i>
                    
                                        <span class="custom-tooltip">
                                            @(!string.IsNullOrEmpty(motive.Description) ? motive.Description : "Aucune description disponible.")
                                        </span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-white small">Description (Optionnel)</label>
                        <textarea class="form-control-astralis" rows="3" 
                                  placeholder="Détails supplémentaires..."
                                  @bind="ViewModel.ReportDescription"></textarea>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewModel.ReportErrorMessage))
                    {
                        <div class="alert alert-danger py-2 small mb-3">@ViewModel.ReportErrorMessage</div>
                    }

                    <div class="d-flex justify-content-end gap-2">
                        <button class="btn btn-outline-light" @onclick="ViewModel.CloseReportModal" disabled="@ViewModel.IsReportSubmitting">Annuler</button>
                        <button class="btn btn-warning" @onclick="ViewModel.SubmitReportAsync" disabled="@ViewModel.IsReportSubmitting">
                            @if (ViewModel.IsReportSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span> <span>Envoi...</span>
                            }
                            else
                            {
                                <span>Envoyer le signalement</span>
                            }
                        </button>
                    </div>
                }
            </div>
        </div>
    }

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-accent-purple"></div>
        </div>
    }
    else if (_article == null)
    {
        <div class="alert alert-warning">Article introuvable ou supprimé.</div>
    }
    else
    {
        <div class="article-full-container glass-panel p-0 overflow-hidden">

            <div class="article-hero position-relative p-5 d-flex flex-column justify-content-end"
                 style="min-height: 400px; background: url('@(_article.CoverImageUrl ?? "/assets/images/placeholder-space.jpg")') center/cover no-repeat;">

                <div class="position-absolute top-0 start-0 w-100 h-100 bg-black bg-opacity-50"></div>

                <AuthorizeView Roles="Rédacteur Commercial, Admin">
                    <div class="article-details-actions">
                        <a href="/admin/articles/edition/@_article.Id" class="btn-action-edit" title="Modifier">
                            <i class="bi bi-pencil-fill"></i>
                        </a>

                        <button class="btn-action-delete" @onclick="() => ShowConfirmDelete = true" title="Supprimer">
                            <i class="bi bi-trash-fill"></i>
                        </button>
                    </div>
                </AuthorizeView>

                <div class="position-relative z-1 text-start">
                    <div class="d-flex gap-2 mb-3">
                        @if (_article.IsPremium)
                        {
                            <span class="badge bg-warning text-dark shadow">Premium</span>
                        }
                        @foreach (var cat in _article.CategoryNames)
                        {
                            <span class="badge bg-black bg-opacity-75 border border-white-10 text-accent-purple">@cat</span>
                        }
                    </div>

                    <h1 class="font-orbitron display-4 text-white fw-bold mb-3" style="text-shadow: 0 2px 10px rgba(0,0,0,0.8);">
                        @_article.Title
                    </h1>

                    <div class="d-flex align-items-center gap-4 text-white-50">
                        <div class="d-flex align-items-center gap-2">
                            <img src="@_article.AuthorAvatarUrl" class="rounded-circle border border-white-50" width="40" height="40"
                                onerror="this.onerror=null;this.src='https://ui-avatars.com/api/?name=@_article.AuthorUsername&background=9d4edd&color=fff&rounded=true';" />
                            <span class="text-white fw-bold">@_article.AuthorUsername</span>
                        </div>
                        <span>•</span>
                        <span>@DateTime.Now.ToString("dd MMMM yyyy")</span>
                    </div>
                </div>
            </div>

            <div class="article-body p-5 text-white">
                @((MarkupString)_article.Content)
            </div>

            <div class="comments-section p-5 border-top border-white-10 article-content-style">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="font-orbitron m-0 text-white"><i class="bi bi-chat-left-text me-2"></i> Commentaires (@ViewModel.TotalCommentCount)</h3>
                    
                    @if (!ViewModel.IsCommentBoxOpen)
                    {
                        <button class="btn btn-astralis-premium btn-sm" @onclick="OpenCommentBox">
                            <i class="bi bi-plus-lg me-2"></i> Laisser un commentaire
                        </button>
                    }
        </div>

                @if (ViewModel.IsCommentBoxOpen)
                {
                    <div class="comment-input-box mb-5 animate-fade-in">
                        <textarea @ref="_commentInputRef" class="form-control-astralis mb-2" rows="3" 
                                  placeholder="Partagez votre avis..." 
                                  @bind="ViewModel.NewCommentText"
                                  disabled="@ViewModel.IsSubmitting"></textarea>
                        
                        @if (!string.IsNullOrEmpty(ViewModel.CommentErrorMessage))
                        {
                            <div class="text-danger small mb-2">@ViewModel.CommentErrorMessage</div>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <button class="btn btn-outline-light btn-sm" 
                                    @onclick="ViewModel.ToggleCommentBox" 
                                    disabled="@ViewModel.IsSubmitting">Annuler</button>
                            
                            <button class="btn btn-astralis-premium btn-sm" 
                                    @onclick="ViewModel.PostCommentAsync"
                                    disabled="@ViewModel.IsSubmitting">
                                @if (ViewModel.IsSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span> <span>Envoi...</span>
                                }
                                else
                                {
                                    <span>Envoyer</span>
                                }
                            </button>
                        </div>
                    </div>
                }

                @if (ViewModel.AreCommentsLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-accent-purple"></div>
                        <span class="ms-2 text-white-50 small">Chargement des discussions...</span>
                    </div>
                }
                else
                {
                    <div class="comments-list">
                        @foreach (var comment in ViewModel.Comments)
                        {
                            <CommentItem @key="comment.Id" Comment="comment" ViewModel="ViewModel" />
                        }
                        
                        @if (ViewModel.Comments.Count == 0)
                        {
                            <p class="text-white-50 fst-italic text-center py-3">Aucun signal reçu pour le moment.</p>
    }
</div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ArticleDetailDto? _article;
    private bool _isLoading = true;
    private bool ShowConfirmDelete = false;
    private ElementReference _commentInputRef;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _article = await ArticleService.GetByIdAsync(Id);
            ViewModel.PropertyChanged += OnViewModelPropertyChanged;
        }
        finally
        {
            _isLoading = false;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        await ViewModel.InitializeAsync(Id);
    }

    private async Task ConfirmDelete()
    {
        await ViewModel.DeleteArticleAsync();
    }

    private async Task OpenCommentBox()
    {
        ViewModel.ToggleCommentBox();
        if (ViewModel.IsCommentBoxOpen)
        {
            await Task.Delay(50);
            await _commentInputRef.FocusAsync();
        }
    }

    private void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        if (e.PropertyName == nameof(ViewModel.Comments) || 
            e.PropertyName == nameof(ViewModel.TotalCommentCount) ||
            e.PropertyName == nameof(ViewModel.CommentToDelete) ||
            e.PropertyName == nameof(ViewModel.EditingCommentId) ||
            e.PropertyName == nameof(ViewModel.IsReportModalOpen) ||
            e.PropertyName == nameof(ViewModel.ShowReportSuccessMessage))
        {
            InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
    }

    private async Task DeleteArticle()
    {
        if (_article != null)
        {
            await ArticleService.DeleteAsync(_article.Id);
            Navigation.NavigateTo("/articles");
        }
    }
}