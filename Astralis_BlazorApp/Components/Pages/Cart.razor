@page "/panier"
@using Astralis_BlazorApp.Services
@using Astralis.Shared.DTOs
@using Microsoft.AspNetCore.Components.Authorization
@inject ICartService CartService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>Mon Panier – Astralis</PageTitle>

<div class="cart-wrapper">

    <div class="page-header mb-4">
        <h1><i class="bi bi-cart3 me-3"></i>Votre Panier</h1>
    </div>

    @if (CartService.Cart.Items.Count == 0)
    {
        <div class="empty-state">
            <i class="bi bi-basket2 display-1 mb-4" style="color: #9d4edd;"></i>
            <h3>Votre soute est vide</h3>
            <p class="text-white-50 mb-4">Aucun module ou équipement n'a été sélectionné.</p>
            <button class="btn btn-primary btn-lg" @onclick="GoToShop">
                Accéder à la boutique
            </button>
        </div>
    }
    else
    {
        <div class="cart-layout">

            <div class="cart-list">

                <div class="d-flex justify-content-end mb-3">
                    <button class="btn btn-outline-danger btn-sm" @onclick="ClearCart">
                        <i class="bi bi-trash"></i> Vider la soute
                    </button>
                </div>

                @foreach (var item in CartService.Cart.Items)
                {
                    <div class="cart-card">
                        <div class="cart-img-container">
                            @if (!string.IsNullOrEmpty(item.ProductPictureUrl))
                            {
                                <img src="@item.ProductPictureUrl" alt="@item.ProductLabel" class="cart-img" />
                            }
                            else
                            {
                                <div class="cart-img-placeholder">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                            }
                        </div>

                        <div class="cart-info">
                            <h4>@item.ProductLabel</h4>
                            <span class="unit-price">@item.UnitPrice.ToString("N2") € / unité</span>
                        </div>

                        <div class="cart-controls">
                            <div class="qty-group">
                                <button class="btn-qty" @onclick="() => CartService.DecreaseQuantityAsync(item)">-</button>
                                <span class="qty-value">@item.Quantity</span>
                                <button class="btn-qty" @onclick="() => CartService.IncreaseQuantityAsync(item)">+</button>
                            </div>
                        </div>

                        <div class="cart-total-col">
                            @item.TotalPrice.ToString("N2") €
                        </div>

                        <button class="btn-delete" @onclick="() => CartService.RemoveFromCartAsync(item)">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                }

                <button class="btn btn-secondary mt-3" @onclick="GoToShop">
                    ← Continuer mes achats
                </button>
            </div>

            <div class="cart-summary-wrapper">
                <div class="cart-summary">
                    <h3>Récapitulatif</h3>

                    <div class="summary-row">
                        <span>Nombre d'articles</span>
                        <span>@CartService.Cart.TotalItemsCount</span>
                    </div>

                    <div class="summary-divider"></div>

                    <div class="summary-total">
                        <span>Total</span>
                        <span class="highlight">@CartService.Cart.GrandTotal.ToString("N2") €</span>
                    </div>

                    <AuthorizeView>
                        <Authorized>
                            <button class="btn btn-primary w-100 btn-lg mt-4"
                                    @onclick="ProceedToPayment"
                                    disabled="@isProcessingPayment">
                                @if (isProcessingPayment)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <span>Redirection Stripe...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-credit-card me-2"></i> Payer la commande</span>
                                }
                    </button>
                        </Authorized>
                        <NotAuthorized>
                            <button class="btn btn-secondary w-100 btn-lg mt-4" @onclick="GoToLogin">
                                <i class="bi bi-person-lock me-2"></i> Se connecter pour payer
                            </button>
                        </NotAuthorized>
                    </AuthorizeView>

                    @if (!string.IsNullOrEmpty(paymentError))
                    {
                        <div class="alert alert-danger mt-3 small">
                            <i class="bi bi-exclamation-triangle me-1"></i> @paymentError
                </div>
                    }
            </div>
        </div>
        </div>
    }
</div>

@code {
    private bool isProcessingPayment = false;
    private string? paymentError;

    protected override async Task OnInitializedAsync()
    {
        CartService.OnChange += StateHasChanged;
        await CartService.LoadCartAsync();
    }

    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }

    private void GoToShop() => Navigation.NavigateTo("/boutique");

    private void GoToLogin()
    {
        var returnUrl = Uri.EscapeDataString(Navigation.Uri);
        Navigation.NavigateTo($"/connexion?returnUrl={returnUrl}");
    }

    private async Task ClearCart()
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Voulez-vous vraiment vider toute votre soute ?");
        if (confirmed)
        {
            await CartService.ClearCartAsync();
        }
    }

    private async Task ProceedToPayment()
    {
        if (isProcessingPayment) return;

        isProcessingPayment = true;
        paymentError = null;

        try
        {
            var paymentUrl = await CartService.CheckoutAsync();

            if (!string.IsNullOrEmpty(paymentUrl))
            {
                Navigation.NavigateTo(paymentUrl, forceLoad: true);
            }
            else
            {
                paymentError = "Erreur : Impossible d'initialiser la session de paiement.";
            }
        }
        catch (Exception ex)
        {
            paymentError = "Erreur technique : " + ex.Message;
        }
        finally
        {
            isProcessingPayment = false;
        }
    }
}