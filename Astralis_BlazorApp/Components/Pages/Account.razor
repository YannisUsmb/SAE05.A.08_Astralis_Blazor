@page "/settings/compte"
@layout SettingsLayout
@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Components.Layout
@inject AccountViewModel ViewModel

<h3 class="text-white mb-4">Connexion & Sécurité</h3>

@if (ViewModel.IsLoading && ViewModel.EditContext == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-accent-purple" role="status"></div>
    </div>
}
else if (ViewModel.EditContext != null)
{
    @if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
    {
        <div class="alert alert-success border-0 bg-success bg-opacity-25 text-white mb-4">
            <i class="bi bi-check-circle me-2"></i> @ViewModel.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage) && !ViewModel.EditContext.GetValidationMessages().Any())
    {
        <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i> @ViewModel.ErrorMessage
        </div>
    }

    <div class="mb-5">
        <h5 class="text-accent-blue mb-3">Coordonnées</h5>
        <div class="glass-panel p-4 rounded-3 border border-white-10">

            <EditForm EditContext="ViewModel.EditContext" OnSubmit="ViewModel.SaveContactInfoAsync">
                <DataAnnotationsValidator />

                <div class="row g-4">
                    <div class="col-12 form-group">
                        <label class="required-label">Adresse Email</label>
                        <InputText class="form-control-astralis" @bind-Value="ViewModel.ContactData.Email" placeholder="nouvel-email@exemple.com" />
                        <ValidationMessage For="@(() => ViewModel.ContactData.Email)" />
                    </div>

                    <div class="col-12 form-group">
                        <label>Téléphone</label>
                        <div class="input-group-astralis">
                            <InputSelect Value="ViewModel.ContactData.CountryId"
                                         ValueChanged="@((int? c) => ViewModel.OnCountryChanged(c))"
                                         ValueExpression="@(() => ViewModel.ContactData.CountryId)"
                                         class="form-control-astralis prefix-select">
                                <option value="">Choisir...</option>
                                @foreach (var country in ViewModel.Countries)
                                {
                                    <option value="@country.Id">@country.Name (@country.PhonePrefix)</option>
                                }
                            </InputSelect>

                            <input type="tel"
                                   class="form-control-astralis phone-input"
                                   placeholder="@ViewModel.PhonePlaceholder"
                                   value="@ViewModel.ContactData.Phone"
                                   @oninput="@(async (ChangeEventArgs e) => await ViewModel.OnPhoneInput(e.Value?.ToString() ?? ""))" />
                        </div>
                        <ValidationMessage For="@(() => ViewModel.ContactData.CountryId)" />
                        <ValidationMessage For="@(() => ViewModel.ContactData.Phone)" />
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-astralis-outline btn-sm" disabled="@ViewModel.IsLoading">
                        @if (ViewModel.IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Sauvegarde...</span>
     }
                        else
                        {
                            <span>Enregistrer les coordonnées</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <hr class="border-secondary my-5" />

    <div class="mb-5">
        <h5 class="text-accent-purple mb-3">Changer de mot de passe</h5>
        <div class="glass-panel p-4 rounded-3 border border-white-10">
            <EditForm Model="@ViewModel.PasswordModel" OnValidSubmit="ViewModel.ChangePasswordAsync">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger small mb-3" />
                <div class="row g-3">
                    <div class="col-12 form-group">
                        <label class="required-label">Mot de passe actuel</label>
                        <InputText type="password" class="form-control-astralis" @bind-Value="ViewModel.PasswordModel.CurrentPassword" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="required-label">Nouveau mot de passe</label>
                        <InputText type="password" class="form-control-astralis" @bind-Value="ViewModel.PasswordModel.NewPassword" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="required-label">Confirmer le nouveau mot de passe</label>
                        <InputText type="password" class="form-control-astralis" @bind-Value="ViewModel.PasswordModel.ConfirmNewPassword" />
                    </div>
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-astralis-premium btn-sm">Mettre à jour le mot de passe</button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="danger-zone p-4 rounded-3">
        <h5 class="text-danger mb-2">Zone de danger</h5>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadUserDataAsync();
    }
}