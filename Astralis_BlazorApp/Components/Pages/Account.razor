@page "/parametres/compte"
@layout SettingsLayout
@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Components.Layout
@inject AccountViewModel ViewModel

<h3 class="text-white mb-4">Connexion & Sécurité</h3>

@if (ViewModel.IsLoading && ViewModel.EditContext == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-accent-purple" role="status"></div>
    </div>
}
else if (ViewModel.EditContext != null)
{
    @if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
    {
        <div class="alert alert-success border-0 bg-success bg-opacity-25 text-white mb-4">
            <i class="bi bi-check-circle me-2"></i> @ViewModel.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage) && !ViewModel.EditContext.GetValidationMessages().Any())
    {
        <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i> @ViewModel.ErrorMessage
        </div>
    }

    <div class="mb-5">
        <h5 class="text-accent-blue mb-3">Coordonnées</h5>
        <div class="glass-panel p-4 rounded-3 border border-white-10">

            <EditForm EditContext="ViewModel.EditContext" OnSubmit="ViewModel.SaveContactInfoAsync">
                <DataAnnotationsValidator />

                <div class="row g-4">
                    <div class="col-12 form-group">
                        <label class="required-label">Adresse Email</label>
                        <input type="text"
                               class="form-control-astralis"
                               placeholder="email@exemple.com"
                               @bind="ViewModel.ContactData.Email"
                               @bind:event="oninput" />
                        <ValidationMessage For="@(() => ViewModel.ContactData.Email)" />
                    </div>

                    <div class="col-12 form-group">
                        <label>Téléphone</label>
                        <div class="input-group-astralis">
                            <select class="form-control-astralis prefix-select"
                                    style="max-width: 150px;"
                                    value="@ViewModel.ContactData.CountryId"
                                    @onchange="@(async (e) => await ViewModel.OnCountryChanged(string.IsNullOrEmpty(e.Value?.ToString()) ? null : int.Parse(e.Value.ToString()!)))">

                                @if (ViewModel.Countries == null || !ViewModel.Countries.Any())
                                {
                                    <option value="" disabled selected>Chargement...</option>
                                }
                                else
                                {
                                    <option value="">Choisir...</option>
                                    @foreach (var country in ViewModel.Countries)
                                    {
                                        <option value="@country.Id" selected="@(country.Id == ViewModel.ContactData.CountryId)">
                                            @country.Name (@country.PhonePrefix)
                                        </option>
                                    }
                                }
                            </select>

                            <input type="tel"
                                   class="form-control-astralis phone-input flex-grow-1"
                                   placeholder="@ViewModel.PhonePlaceholder"
                                   value="@ViewModel.ContactData.Phone"
                                   @oninput="@(async (ChangeEventArgs e) => await ViewModel.OnPhoneInput(e.Value?.ToString() ?? ""))"
                                   @onfocusout="ViewModel.ValidatePhoneAvailabilityAsync"
                                   disabled="@(!ViewModel.ContactData.CountryId.HasValue)" />
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-astralis-premium btn-sm px-3" disabled="@(ViewModel.IsLoading || !ViewModel.IsContactDirty)">
                        @if (ViewModel.IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Sauvegarde...</span>
                        }
                        else
                        {
                            <span>Enregistrer les coordonnées</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <hr class="border-secondary my-5" />

    <div class="mb-5">
        <h5 class="text-accent-purple mb-3">Changer de mot de passe</h5>
        <div class="glass-panel p-4 rounded-3 border border-white-10">
            <EditForm Model="@ViewModel.PasswordModel" OnValidSubmit="ViewModel.ChangePasswordAsync">
                <DataAnnotationsValidator />

                <div class="row g-3">
                    <div class="col-12 form-group">
                        <label class="required-label">Mot de passe actuel</label>
                        <input type="password"
                               class="form-control-astralis"
                               @bind="ViewModel.PasswordModel.CurrentPassword"
                               @bind:event="oninput" />
                        <ValidationMessage For="@(() => ViewModel.PasswordModel.CurrentPassword)" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="required-label">Nouveau mot de passe</label>
                        <input type="password"
                               class="form-control-astralis"
                               @bind="ViewModel.PasswordModel.NewPassword"
                               @bind:event="oninput" />
                        <ValidationMessage For="@(() => ViewModel.PasswordModel.NewPassword)" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="required-label">Confirmer le nouveau mot de passe</label>
                        <input type="password"
                               class="form-control-astralis"
                               @bind="ViewModel.PasswordModel.ConfirmNewPassword"
                               @bind:event="oninput" />
                        <ValidationMessage For="@(() => ViewModel.PasswordModel.ConfirmNewPassword)" />
                    </div>
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-astralis-premium btn-sm">Mettre à jour le mot de passe</button>
                </div>
            </EditForm>
        </div>
    </div>

    <div class="danger-zone p-4">
        <h5 class="text-danger mb-2">Zone de danger</h5>
        <p class="text-white-50 small mb-4">
            Gérez la fin de vie de votre compte Astralis. Ces actions sont irréversibles.
        </p>

        <div class="d-flex justify-content-end gap-3">
            <button class="btn btn-outline-warning btn-sm text-warning-emphasis">
                <i class="bi bi-incognito me-1"></i> Anonymiser mes données
            </button>

            <button class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash me-1"></i> Supprimer mon compte
            </button>
        </div>
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.LoadUserDataAsync();
    }
}