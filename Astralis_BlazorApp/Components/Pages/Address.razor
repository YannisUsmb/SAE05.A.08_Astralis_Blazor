@page "/parametres/adresses"
@layout SettingsLayout
@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.ViewModels
@using Astralis_BlazorApp.Components.Layout
@inject AddressViewModel ViewModel

<div class="d-flex align-items-center justify-content-between mb-4">
    <h3 class="text-white m-0 fw-light">Mes <span class="fw-bold">adresses</span></h3>
    @if (ViewModel.IsLoading)
    {
        <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
    }
</div>

@if (!string.IsNullOrEmpty(ViewModel.SuccessMessage))
{
    <div class="alert alert-success d-flex align-items-center border-0 bg-success bg-opacity-25 text-white mb-4">
        <i class="bi bi-check-circle-fill me-2"></i> <div>@ViewModel.SuccessMessage</div>
    </div>
}
@if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
{
    <div class="alert alert-danger d-flex align-items-center border-0 bg-danger bg-opacity-25 text-white mb-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> <div>@ViewModel.ErrorMessage</div>
    </div>
}

<div class="row g-4">
    <div class="col-lg-6">
        <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3 text-info">
                <i class="bi bi-truck fs-4"></i>
            </div>
            <h5 class="text-white m-0">Livraison</h5>
        </div>

        @if (ViewModel.DeliveryAddress != null && !ViewModel.IsEditingDelivery)
        {
            <div class="address-card p-4 rounded-3 position-relative h-100">
                <div class="position-absolute top-0 end-0 m-3 d-flex gap-2">
                    <button class="btn btn-sm btn-icon text-white-50 hover-danger"
                            title="Supprimer"
                            @onclick='() => ViewModel.DeleteAddressCommand.Execute("Delivery")'>
                        <i class="bi bi-trash-fill"></i>
                    </button>
                    <button class="btn btn-sm btn-icon text-white"
                            title="Modifier"
                            @onclick='() => ViewModel.EditCommand.Execute("Delivery")'>
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                </div>

                <div class="text-white-50 text-uppercase small mb-1">Adresse principale</div>
                <div class="fs-5 text-white fw-bold mb-1">
                    @ViewModel.DeliveryAddress.StreetNumber @ViewModel.DeliveryAddress.StreetAddress
                </div>
                <div class="text-white mb-3">
                    <span class="badge bg-light text-dark bg-opacity-75 me-2">@ViewModel.DeliveryAddress.PostCode</span>
                    @ViewModel.DeliveryAddress.CityName
                </div>
                <div class="d-flex align-items-center text-info small">
                    <i class="bi bi-globe me-2"></i> @ViewModel.DeliveryAddress.CountryName
                </div>
            </div>
        }
        else if (ViewModel.DeliveryAddress == null && !ViewModel.IsEditingDelivery)
        {
            <div class="address-card-empty p-5 rounded-3 d-flex flex-column align-items-center justify-content-center text-center h-100"
                 @onclick='() => ViewModel.EditCommand.Execute("Delivery")' style="cursor: pointer;">
                <i class="bi bi-plus-circle display-4 text-white-50 mb-3"></i>
                <h6 class="text-white">Définir l'adresse de livraison</h6>
                <p class="text-white-50 small m-0">Pour recevoir vos commandes</p>
            </div>
        }
        else
        {
            <div class="address-card p-4 rounded-3 h-100">
                <EditForm Model="ViewModel.DeliveryForm" OnValidSubmit='() => ViewModel.SaveAddressCommand.ExecuteAsync("Delivery")'>
                    <DataAnnotationsValidator />
                    <div class="row g-3">
                        <div class="col-4">
                            <label class="form-label text-white-50 small">N°</label>
                            <InputText @bind-Value="ViewModel.DeliveryForm.StreetNumber" class="form-control form-control-dark" placeholder="10" />
                        </div>
                        <div class="col-8">
                            <label class="form-label text-white-50 small">Voie</label>
                            <InputText @bind-Value="ViewModel.DeliveryForm.StreetAddress" class="form-control form-control-dark" placeholder="Rue..." />
                        </div>

                        <div class="col-12 position-relative">
                            <label class="form-label text-white-50 small">Ville ou Code Postal</label>
                            <input type="text" class="form-control form-control-dark" placeholder="Rechercher..."
                                   value="@ViewModel.DeliveryCitySearch"
                                   @oninput="(e) => ViewModel.SearchDeliveryCity(e.Value?.ToString() ?? string.Empty)" />

                            @if (ViewModel.DeliveryCitySuggestions.Any())
                            {
                                <ul class="list-group position-absolute w-100 mt-1 shadow city-dropdown">
                                    @foreach (var city in ViewModel.DeliveryCitySuggestions)
                                    {
                                        <li class="list-group-item list-group-item-action bg-dark text-white border-white-10"
                                            @onclick="() => ViewModel.SelectDeliveryCity(city)" style="cursor: pointer;">
                                            <span>@city.Name</span> <small class="text-white-50">(@city.PostCode)</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>

                        <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                            <button type="button" class="btn btn-outline-light btn-sm" @onclick='() => ViewModel.CancelEditCommand.Execute("Delivery")'>Annuler</button>
                            <button type="submit" class="btn btn-primary btn-sm">Valider</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        }
    </div>

    <div class="col-lg-6">
        <div class="d-flex align-items-center mb-3">
            <div class="icon-box me-3 text-warning">
                <i class="bi bi-receipt fs-4"></i>
            </div>
            <h5 class="text-white m-0">Facturation</h5>
        </div>

        @if (ViewModel.BillingAddress != null && !ViewModel.IsEditingBilling)
        {
            <div class="address-card p-4 rounded-3 position-relative h-100">
                <div class="position-absolute top-0 end-0 m-3 d-flex gap-2">
                    <button class="btn btn-sm btn-icon text-white-50 hover-danger"
                            title="Supprimer"
                            @onclick='() => ViewModel.DeleteAddressCommand.Execute("Billing")'>
                        <i class="bi bi-trash-fill"></i>
                    </button>
                    <button class="btn btn-sm btn-icon text-white"
                            title="Modifier"
                            @onclick='() => ViewModel.EditCommand.Execute("Billing")'>
                        <i class="bi bi-pencil-fill"></i>
                    </button>
                </div>

                <div class="text-white-50 text-uppercase small mb-1">Adresse de facturation</div>
                <div class="fs-5 text-white fw-bold mb-1">
                    @ViewModel.BillingAddress.StreetNumber @ViewModel.BillingAddress.StreetAddress
                </div>
                <div class="text-white mb-3">
                    <span class="badge bg-light text-dark bg-opacity-75 me-2">@ViewModel.BillingAddress.PostCode</span>
                    @ViewModel.BillingAddress.CityName
                </div>
                <div class="d-flex align-items-center text-warning small">
                    <i class="bi bi-globe me-2"></i> @ViewModel.BillingAddress.CountryName
                </div>
            </div>
        }
        else if (ViewModel.BillingAddress == null && !ViewModel.IsEditingBilling)
        {
            <div class="address-card-empty p-5 rounded-3 d-flex flex-column align-items-center justify-content-center text-center h-100"
                 @onclick='() => ViewModel.EditCommand.Execute("Billing")' style="cursor: pointer;">
                <i class="bi bi-plus-circle display-4 text-white-50 mb-3"></i>
                <h6 class="text-white">Définir l'adresse de facturation</h6>
                <p class="text-white-50 small m-0">Pour vos factures</p>
            </div>
        }
        else
        {
            <div class="address-card p-4 rounded-3 h-100">
                <EditForm Model="ViewModel.BillingForm" OnValidSubmit='() => ViewModel.SaveAddressCommand.ExecuteAsync("Billing")'>
                    <DataAnnotationsValidator />
                    <div class="row g-3">
                        <div class="col-4">
                            <label class="form-label text-white-50 small">N°</label>
                            <InputText @bind-Value="ViewModel.BillingForm.StreetNumber" class="form-control form-control-dark" placeholder="10" />
                        </div>
                        <div class="col-8">
                            <label class="form-label text-white-50 small">Voie</label>
                            <InputText @bind-Value="ViewModel.BillingForm.StreetAddress" class="form-control form-control-dark" placeholder="Rue..." />
                        </div>

                        <div class="col-12 position-relative">
                            <label class="form-label text-white-50 small">Ville ou Code Postal</label>
                            <input type="text" class="form-control form-control-dark" placeholder="Rechercher..."
                                   value="@ViewModel.BillingCitySearch"
                                   @oninput="(e) => ViewModel.SearchBillingCity(e.Value?.ToString() ?? string.Empty)" />

                            @if (ViewModel.BillingCitySuggestions.Any())
                            {
                                <ul class="list-group position-absolute w-100 mt-1 shadow city-dropdown">
                                    @foreach (var city in ViewModel.BillingCitySuggestions)
                                    {
                                        <li class="list-group-item list-group-item-action bg-dark text-white border-white-10"
                                            @onclick="() => ViewModel.SelectBillingCity(city)" style="cursor: pointer;">
                                            <span>@city.Name</span> <small class="text-white-50">(@city.PostCode)</small>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>

                        <div class="col-12 d-flex justify-content-end gap-2 mt-3">
                            <button type="button" class="btn btn-outline-light btn-sm" @onclick='() => ViewModel.CancelEditCommand.Execute("Billing")'>Annuler</button>
                            <button type="submit" class="btn btn-primary btn-sm">Valider</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        }
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
    }
}