@page "/reset-password"
@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Services.Interfaces
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager Navigation
@inject IAuthService AuthService

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-panel p-5" style="max-width: 500px; width: 100%;">

        <h3 class="text-white mb-4 text-center">Nouveau mot de passe</h3>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger border-0 bg-danger bg-opacity-25 text-white mb-3">
                @errorMessage
            </div>
        }

        @if (isSuccess)
        {
            <div class="text-center">
                <i class="bi bi-check-circle-fill text-success display-1 mb-3"></i>
                <p class="text-white mb-4">Votre mot de passe a été modifié avec succès.</p>
                <NavLink href="/connexion" class="btn btn-astralis-premium w-100">Se connecter</NavLink>
            </div>
        }
        else
        {
            <EditForm Model="resetDto" OnValidSubmit="HandleReset">
                <DataAnnotationsValidator />

                <div class="form-group mb-3">
                    <label class="required-label">Nouveau mot de passe</label>
                    <InputText type="password" class="form-control-astralis" @bind-Value="resetDto.NewPassword" />
                    <ValidationMessage For="@(() => resetDto.NewPassword)" />
                </div>

                <div class="form-group mb-4">
                    <label class="required-label">Confirmer le mot de passe</label>
                    <InputText type="password" class="form-control-astralis" @bind-Value="resetDto.ConfirmPassword" />
                    <ValidationMessage For="@(() => resetDto.ConfirmPassword)" />
                </div>

                <button type="submit" class="btn btn-astralis-premium w-100" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                    }
                    Modifier le mot de passe
                </button>
            </EditForm>
        }
    </div>
</div>

@code {
    private ResetPasswordDto resetDto = new();
    private bool isLoading = false;
    private bool isSuccess = false;
    private string? errorMessage;

    protected override void OnInitialized()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("token", out var token))
        {
            resetDto.Token = token!;
        }
        else
        {
            errorMessage = "Lien invalide (token manquant).";
        }
    }

    private async Task HandleReset()
    {
        if (string.IsNullOrEmpty(resetDto.Token))
        {
            errorMessage = "Lien invalide.";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            await AuthService.ResetPasswordAsync(resetDto);
            isSuccess = true;
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }
}