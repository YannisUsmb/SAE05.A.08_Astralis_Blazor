@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Services.Interfaces
@inject ICelestialBodyService CelestialBodyService

<div class="form-step">
    <h3>Détails de la planète</h3>
    
    <EditForm Model="@Model" OnValidSubmit="HandleNext">
        <DataAnnotationsValidator />

        <div class="form-group">
            <label>Titre de la découverte *</label>
            <InputText @bind-Value="Model.Title" class="form-control" placeholder="Ex: Nouvelle exoplanète" />
            <ValidationMessage For="@(() => Model.Title)" />
        </div>

        <h4>Caractéristiques</h4>

        <div class="form-row">
            <div class="form-group">
                <label>Type de planète *</label>
                <InputSelect @bind-Value="Model.Details.PlanetTypeId" class="form-control">
                    <option value="0">-- Sélectionner --</option>
                    @if (_planetTypes != null)
                    {
                        foreach (var type in _planetTypes)
                        {
                            <option value="@type.Id">@type.Label</option>
                        }
                    }
                </InputSelect>
                @if (Model.Details.PlanetTypeId == 0 && _attemptedSubmit)
                {
                    <div class="text-danger small">Le type est obligatoire.</div>
                }
            </div>

            <div class="form-group">
                <label>Méthode de détection *</label>
                <InputSelect @bind-Value="Model.Details.DetectionMethodId" class="form-control">
                    <option value="0">-- Sélectionner --</option>
                    @if (_detectionMethods != null)
                    {
                        foreach (var method in _detectionMethods)
                        {
                            <option value="@method.Id">@method.Label</option>
                        }
                    }
                </InputSelect>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label>Nom *</label>
                <InputText @bind-Value="Model.Details.Name" class="form-control" />
                <ValidationMessage For="@(() => Model.Details.Name)" />
            </div>
            
            </div>

        <div class="form-row">
            <div class="form-group">
                <label>Masse (M⊕)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Mass" class="form-control" />
            </div>
            <div class="form-group">
                <label>Rayon (R⊕)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Radius" class="form-control" />
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label>Distance (AL)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Distance" class="form-control" />
            </div>
             <div class="form-group">
                <label>Température</label>
                <InputText @bind-Value="Model.Details.Temperature" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label>Remarques</label>
            <InputTextArea @bind-Value="Model.Details.Remark" class="form-control" rows="3" />
        </div>

        <div class="form-navigation">
            <button type="button" class="btn btn-secondary" @onclick="OnPrevious">Précédent</button>
            <button type="submit" class="btn btn-primary">Suivant</button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public DiscoveryPlanetSubmissionDto Model { get; set; } = new();
    [Parameter] public EventCallback<DiscoveryPlanetSubmissionDto> ModelChanged { get; set; }
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnPrevious { get; set; }

    private List<CelestialBodySubtypeDto>? _planetTypes;
    private List<DetectionMethodDto>? _detectionMethods;
    private bool _attemptedSubmit = false;

    protected override async Task OnInitializedAsync()
    {
        if (Model.Details == null) Model.Details = new PlanetCreateDto();
        
        try {
            _planetTypes = await CelestialBodyService.GetSubtypesAsync(2); 
            _detectionMethods = await CelestialBodyService.GetDetectionMethodsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erreur chargement listes: " + ex.Message);
        }
    }

    private async Task HandleNext()
    {
        _attemptedSubmit = true;
        
        if (Model.Details.PlanetTypeId == 0) return;

        await ModelChanged.InvokeAsync(Model);
        await OnNext.InvokeAsync();
    }
}