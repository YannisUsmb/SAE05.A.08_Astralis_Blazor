@using Astralis.Shared.DTOs
@using Astralis_BlazorApp.Services.Interfaces
@inject ICelestialBodyService CelestialBodyService

<div class="form-step">
    <h3>Détails du satellite</h3>
    
    <EditForm Model="@Model" OnValidSubmit="HandleNext">
        <DataAnnotationsValidator />

        <div class="form-group">
            <label>Titre de la découverte *</label>
            <InputText @bind-Value="Model.Title" class="form-control" placeholder="Ex: Nouvelle lune de Jupiter" />
            <ValidationMessage For="@(() => Model.Title)" />
        </div>

        <h4>Caractéristiques du satellite</h4>

        <div class="form-group">
            <label>Planète Parente (Système Solaire) *</label>
            @if (_parentPlanets == null)
            {
                <p class="text-muted small">Chargement des planètes...</p>
            }
            else
            {
                <InputSelect @bind-Value="Model.Details.PlanetId" class="form-control">
                    <option value="0">-- Sélectionner la planète --</option>
                    @foreach (var planet in _parentPlanets)
                    {
                        <option value="@planet.Id">@planet.Name</option>
                    }
                </InputSelect>
                @if (Model.Details.PlanetId == 0 && _attemptedSubmit)
                {
                    <div class="text-danger small">La planète parente est obligatoire.</div>
                }
            }
            <div class="form-text text-muted small">
                Seules les planètes du système solaire sont affichées ici.
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label>Nom *</label>
                <InputText @bind-Value="Model.Details.Name" class="form-control" placeholder="Ex: S/2024 J1" />
                <ValidationMessage For="@(() => Model.Details.Name)" />
            </div>

            </div>

        <div class="form-row">
            <div class="form-group">
                <label>Rayon (km)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Radius" class="form-control" placeholder="Ex: 1560.8" />
            </div>

            <div class="form-group">
                <label>Gravité (m/s²)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Gravity" class="form-control" placeholder="Ex: 1.314" />
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label>Densité (g/cm³)</label>
                <InputNumber TValue="decimal?" @bind-Value="Model.Details.Density" class="form-control" placeholder="Ex: 3.01" />
            </div>
        </div>

        <div class="form-navigation">
            <button type="button" class="btn btn-secondary" @onclick="OnPrevious">
                <i class="bi bi-arrow-left"></i> Précédent
            </button>
            <button type="submit" class="btn btn-primary">
                Suivant <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public DiscoverySatelliteSubmissionDto Model { get; set; } = new();
    [Parameter] public EventCallback<DiscoverySatelliteSubmissionDto> ModelChanged { get; set; }
    [Parameter] public EventCallback OnNext { get; set; }
    [Parameter] public EventCallback OnPrevious { get; set; }

    private List<CelestialBodyListDto>? _parentPlanets;
    private bool _attemptedSubmit = false;
    
    private readonly List<string> _majorPlanets = new() 
    { 
        "Mercure", "Venus", "Terre", "Mars", "Jupiter", "Saturne", "Uranus", "Neptune", "Pluton",
        "Mercury", "Earth", "Saturn", "Pluto"
    };

    protected override async Task OnInitializedAsync()
    {
        if (Model.Details == null) Model.Details = new SatelliteCreateDto();

        try
        {
            var allBodies = await CelestialBodyService.GetAllAsync();
            
            _parentPlanets = allBodies
                .Where(cb => 
                    (cb.CelestialBodyTypeName.Contains("Planète") || cb.CelestialBodyTypeName.Contains("Planet")) 
                    && _majorPlanets.Any(p => cb.Name.Contains(p, StringComparison.OrdinalIgnoreCase)))
                .OrderBy(cb => cb.Name)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erreur chargement planètes : " + ex.Message);
        }
    }

    private async Task HandleNext()
    {
        _attemptedSubmit = true;
        if (Model.Details.PlanetId == 0) return;

        await ModelChanged.InvokeAsync(Model);
        await OnNext.InvokeAsync();
    }
}