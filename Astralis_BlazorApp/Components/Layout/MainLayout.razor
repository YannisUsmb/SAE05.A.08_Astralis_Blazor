@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject MainLayoutViewModel ViewModel
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

<div class="d-flex flex-column min-vh-100" @onclick="CloseMenuOnClickOutside">

    <div class="starfield">
        @for (int i = 0; i < 100; i++)
        {
            <div class="star" style="@GetStarStyle()"></div>
        }
    </div>

    <nav class="navbar navbar-expand-lg fixed-top glass-effect navbar-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <img src="/assets/logoAstralis.png" alt="Astralis" height="40">
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0 gap-lg-4">
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.Home" Match="NavLinkMatch.All">Accueil</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.CelestialBodies">Corps Célestes</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.Events">Événements</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.Articles">Articles</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.Audios">Audios</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="@AppRoutes.Shop">Boutique</NavLink></li>
                </ul>

                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center gap-3">
                            <AuthorizeView Policy="MustBePremium" Context="premiumContext">
                                <NotAuthorized>
                                    <NavLink href="@AppRoutes.Premium" class="btn btn-astralis-premium btn-sm px-3 d-none d-md-block">
                                        Mettre à niveau
                                    </NavLink>
                                </NotAuthorized>
                            </AuthorizeView>

                            <div class="user-menu-container" @onclick:stopPropagation="true" @onclick="ToggleUserMenu">
                                <img src="@GetUserProfileImage(context.User)"
                                     class="rounded-circle user-avatar"
                                     alt="Profil"
                                     onerror="this.onerror=null;this.src='@GetDefaultAvatarUrl(context.User)';" />

                                @if (_isUserMenuOpen)
                                {
                                    <div class="dropdown-menu-glass">
                                        <div class="px-3 py-2 text-white-50 small border-bottom border-white-10 mb-1">
                                            Connecté en tant que <br />
                                            <strong class="text-white">@context.User.Identity?.Name</strong>
                                        </div>

                                        <NavLink href="@AppRoutes.Profile" class="dropdown-item-glass" @onclick="CloseMenu">
                                            <i class="bi bi-person-circle"></i> Mon Profil
                                        </NavLink>

                                        <NavLink href="@AppRoutes.Account" class="dropdown-item-glass" @onclick="CloseMenu">
                                            <i class="bi bi-gear-fill"></i> Paramètres
                                        </NavLink>

                                        <NavLink href="/parametres?section=favorites" class="dropdown-item-glass" @onclick="CloseMenu">
                                            <i class="bi bi-heart-fill text-accent-purple"></i> Mes Favoris
                                        </NavLink>

                                        <div class="dropdown-divider-glass"></div>

                                        <button class="dropdown-item-glass text-danger" @onclick="LogoutAndClose">
                                            <i class="bi bi-box-arrow-right"></i> Déconnexion
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </Authorized>

                    <NotAuthorized>
                        <div class="d-flex align-items-center gap-3">
                            <NavLink href="@AppRoutes.Connexion" class="btn btn-astralis-outline btn-sm px-3">Connexion</NavLink>
                            <NavLink href="@AppRoutes.SignUp" class="btn btn-astralis-premium btn-sm px-3">Inscription</NavLink>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1 pt-5 mt-5">
        @Body
    </main>

    <footer class="footer-glass text-secondary py-5 mt-auto">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white mb-3 ls-1">ASTRALIS</h5>
                    <p class="small text-white-50">
                        Plateforme avancée de données spatiales pour chercheurs, astronomes et passionnés.
                    </p>
                </div>

                <div class="col-lg-2 col-md-6 offset-lg-1">
                    <h6 class="text-white text-uppercase small fw-bold mb-3">Plateforme</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><NavLink href="@AppRoutes.CelestialBodies" class="text-white-50 text-decoration-none hover-white">Base de données</NavLink></li>
                        <li><a href="#" class="text-white-50 text-decoration-none hover-white">Accès API</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white text-uppercase small fw-bold mb-3">Ressources</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><NavLink href="@AppRoutes.Articles" class="text-white-50 text-decoration-none hover-white">Articles</NavLink></li>
                        <li><a href="#" class="text-white-50 text-decoration-none hover-white">Support</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h6 class="text-white text-uppercase small fw-bold mb-3">Entreprise</h6>
                    <ul class="list-unstyled d-flex flex-column gap-2">
                        <li><a href="#" class="text-white-50 text-decoration-none hover-white">À propos</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none hover-white">Conditions</a></li>
                    </ul>
                </div>
            </div>

            <div class="row mt-5 pt-4 border-top border-white-10">
                <div class="col-md-6 text-center text-md-start small text-white-50">
                    © 2025 Astralis. Tous droits réservés.
                </div>
                <div class="col-md-6 text-center text-md-end small text-white-50">
                    Propulsé par les données ouvertes de la NASA
                </div>
            </div>
        </div>
    </footer>
</div>

@code {
    private bool _isUserMenuOpen = false;

    private void ToggleUserMenu()
    {
        _isUserMenuOpen = !_isUserMenuOpen;
    }

    private void CloseMenu()
    {
        _isUserMenuOpen = false;
    }

    private void CloseMenuOnClickOutside()
    {
        if (_isUserMenuOpen)
        {
            _isUserMenuOpen = false;
        }
    }

    private async Task LogoutAndClose()
    {
        _isUserMenuOpen = false;
        await ViewModel.LogoutAsync();
    }

    private string GetUserProfileImage(ClaimsPrincipal user)
    {
        var pictureClaim = user.FindFirst("AvatarPath");
        if (pictureClaim != null && !string.IsNullOrEmpty(pictureClaim.Value))
        {
            return pictureClaim.Value;
        }

        return GetDefaultAvatarUrl(user);
    }

    private string GetDefaultAvatarUrl(ClaimsPrincipal user)
    {
        return "https://ui-avatars.com/api/?name=" + user.Identity?.Name + "&background=9d4edd&color=fff&rounded=true";
    }

    private string GetStarStyle()
    {
        var random = new Random();
        var left = random.Next(0, 100);
        var size = random.NextDouble() * 2 + 1;
        var duration = 15 - (size * 4);
        var delay = -1 * random.NextDouble() * duration;
        var opacity = random.NextDouble() * 0.5 + 0.3;

        var style = string.Format(System.Globalization.CultureInfo.InvariantCulture,
            "left: {0}%; width: {1:F1}px; height: {1:F1}px; animation-duration: {2:F1}s; animation-delay: {3:F1}s; opacity: {4:F2};",
            left, size, duration, delay, opacity);

        return style;
    }
}